{% extends 'base.html.twig' %}

{% block head %}
    <link href="{{ asset('css/custom-style.css')}}" rel="stylesheet" type="text/css">
{% endblock %}

{% block title %}Edit Contact{% endblock %}

{% block body %}
    <div class="text-center">
        <h1 class="h4 text-gray-900 mb-4">{{ form_title }}</h1>
    </div>
    <div class="edit-form">
        <form name="contact" method="post">
                <div class="form-group">
                    <label for="contact_name" class="required">Name</label>
                    <input class="form-control form-control-user" type="text" id="contact_name" name="contact[name]" value="{{ contact.getName() ?? null}}" required="required" maxlength="255" />
                </div>
                <div class="form-group">
                    <label for="contact_email" class="required">Email</label>
                    <input class="form-control form-control-user" type="text" id="contact_email" name="contact[email]" value="{{ contact.getEmail() ?? null}}" required="required" maxlength="255" />
                </div>
                <div class="form-group">
                    <label for="contact_phone_number">Phone number</label>
                    <input class="form-control form-control-user" type="text" id="contact_phone_number" name="contact[phone_number]" value="{{ contact.getPhoneNumber()}}" maxlength="15" />
                </div>
                <div class="form-group">
                    <label for="contact_address">Address</label>
                    <input class="form-control form-control-user" type="text" id="contact_address" name="contact[address]" value="{{ contact.getAddress() ?? null}}" maxlength="255" />
                </div>
            
                <input type="hidden" id="contact__token" name="contact[_token]" value="{{ csrf_token('contact') }}" />
                

                <div class="edit-buttons">
                    <button class="btn btn-primary btn-user" type="submit">Update</button>
                    <a class="btn btn-secondary btn-user" href="{{ path('app_contact_index') }}">Back to list</a>
                </div>
        </form>
    </div>
{% endblock %}
